pipeline {
  agent {
    docker { image 'liquibase/liquibase:4.13' }
  }
  environment {
    MARIADB_CREDS=credentials('mariadb-credentials')
  }
  stages {
    stage('Status') {
      steps {
        sh 'liquibase status --url="jdbc:mysql://db.stgqa2.unicommerce.infra:3306/delta?autoReconnect=true&useSSL=false" --changeLogFile=update.xml --username=$MARIADB_CREDS_USR --password=$MARIADB_CREDS_PSW'
      }
    }
    stage('Update') {
      steps {
        sh 'liquibase update --url="jdbc:mysql://db.stgqa2.unicommerce.infra:3306/delta?autoReconnect=true&useSSL=false" --changeLogFile=update.xml --username=$MARIADB_CREDS_USR --password=$MARIADB_CREDS_PSW'
      }
    }
  }
  post {
    always {
      cleanWs()
    }
  }
}
